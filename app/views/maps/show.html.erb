<article>
  <header>
    <h1><%= active_character.map.name %></h1>
    <p>You can teleport to any place to hunt.</p>
  </header>

  <% @spots.each do |spot| %>
    <section>
      <h2>
        <%= spot.name %>
      </h2>

      <%= button_to "Go to", activate_spot_path(spot), method: :post %>
    </section>
  <% end %>
</article>

<h1>Create character</h1>

<%= form_with model: @character, url: character_path do |form| %>
  <div>
    <%= debug form.object %>
  </div>
  <% if form.object && form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div>
    <%= form.select :character_type, [['Dark Wizard', 1], ['Dark Knight', 2], ['Light Elf', 3]] %>
  </div>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "Create" %>
  </div>
<% end %>

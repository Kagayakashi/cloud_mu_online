<article>
  <header>
    <h1>My characters</h1>
    <p>You can create new character or choose character to play with.</p>
    <%= link_to "New character", new_character_path %>
  </header>
  <% @characters.each do |character| %>
    <section>
      <%= link_to character_path(character) do %>
        <h2><%= character.name %></h2>
        <p>No guild</p>
        <p>
          <%= character.profession %> <strong>[<%= character.level %>]</strong>
        </p>
      <% end %>
    </section>
  <% end %>
</article>
